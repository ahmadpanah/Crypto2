<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#055C00"
    >

    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVSymbol"
            android:padding="3dp"
            android:layout_margin="2dp"
            android:text="Symbol"
            android:layout_toLeftOf="@id/idTVCurrencyRate"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVCurrencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVSymbol"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@id/idTVCurrencyRate"
            android:padding="3dp"
            android:text="Name"
            android:textColor="@color/white"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:padding="3dp"
            android:id="@+id/idTVCurrencyRate"
            android:layout_margin="2dp"
            android:text="Rate"
            android:textColor="@color/white"
             />

    </RelativeLayout>


</androidx.cardview.widget.CardView>